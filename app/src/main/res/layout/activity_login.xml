<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/group_8"
    android:id="@+id/relative">


    <RelativeLayout
        android:id="@+id/realtive4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_more_vert_blue_24dp"
            android:visibility="visible"
            android:id="@+id/imgmore"

            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/group_9" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:id="@+id/txtphone">




        <EditText
            android:id="@+id/edtphone"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:hint="رقم التليفون"
            android:ems="10"
            android:background="@drawable/edittext"
            android:inputType="number"
            android:drawableRight="@drawable/ic_profile"
            android:padding="15dp"
            android:drawablePadding="15dp"
            android:shadowColor="@android:color/black"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
android:layout_below="@+id/txtphone"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"

        >

        <info.hoang8f.widget.FButton
            android:id="@+id/btnlogin"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:fontFamily="@font/actor"
            android:text="تسجيل الدخول "
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="40sp"
            app:fButtonColor="#0e6e92"
            app:shadowColor="@android:color/black"
            app:shadowEnabled="true"
            app:shadowHeight="2dp"
            tools:fontFamily="@font/actor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="ليس لديك حساب؟"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_marginLeft="180dp"
            android:textStyle="bold"
            tools:fontFamily="@font/actor"/>

        <TextView
            android:id="@+id/txtlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="-20dp"
            android:clickable="true"
            android:text="سجل الان"
            android:textColor="#0e6e92"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:fontFamily="@font/actor"/>


    </LinearLayout>




</RelativeLayout>
