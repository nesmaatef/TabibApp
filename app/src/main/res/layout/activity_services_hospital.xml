<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clinic_services"
    android:background="@drawable/group_8">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/iconfinder_edit_find_replace_118921"
        android:visibility="invisible"
        android:layout_marginLeft="10dp"
        android:id="@+id/imgmore1"
        android:layout_marginTop="10dp"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/imgmore1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="اختر الخدمه المناسبه"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/cairo_extralight"/>

        <androidx.recyclerview.widget.RecyclerView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_service_hospital"
            android:scrollbars="vertical"
            android:layout_marginTop="40dp"
            >
        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>





</RelativeLayout>