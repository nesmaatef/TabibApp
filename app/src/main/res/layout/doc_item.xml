<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    app:cardElevation="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/doctor_item"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/doctor_image"
            android:src="@drawable/background"
            android:layout_marginLeft="250dp"






            />

        <TextView
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_rounded"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:hint="doctor name here"
            android:id="@+id/txtname"
            />

        <TextView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/txtdesc"
            android:textColor="@android:color/white"
            android:hint="doctor desc here"
            android:textColorHint="@android:color/white"
            />
        <TextView
            android:layout_width="250dp"
            android:layout_height="110dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/rounded1"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/location_icon__"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="190dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="90dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="map here"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/white"
            android:id="@+id/txtmap"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/mony_icon__"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="190dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="140dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="price here"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/white"
            android:id="@+id/txtprice"
            />



            <ImageView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:tint="@android:color/white"
                android:src="@drawable/ic_favorite_border_black_24dp"
                android:id="@+id/fav"
                android:layout_marginTop="210dp"
                android:background="@drawable/bg_rounded"
                />

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="170dp"
            android:background="@drawable/round2"
            android:text="احجز الان"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textStyle="bold"

            />






    </RelativeLayout>

</android.support.v7.widget.CardView>