<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup"
    android:background="@drawable/group_8"
    android:id="@+id/relative">

    <RelativeLayout
        android:id="@+id/realtive4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_more_vert_blue_24dp"
            android:visibility="visible"
            android:id="@+id/imgmore"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="230dp"
        android:layout_height="191dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="184dp"
            android:layout_height="141dp"
            android:src="@drawable/group_9"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id="@+id/txtphone">




        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:hint="رقم التليفون"
            app:met_textColorHint="@android:color/black"
            android:drawableTint="@color/doctor"
            android:gravity="center"
            android:inputType="number"
            android:drawablePadding="10dp"
            android:shadowColor="@android:color/black"

            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtcompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            app:met_textColorHint="@android:color/black"
            android:hint="شركه التامين الخاصه"
            android:drawableTint="@color/doctor"
            android:gravity="center"
            android:inputType="text"
            android:drawablePadding="10dp"
            android:shadowColor="@android:color/black"
            android:layout_marginTop="10dp"


            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtcity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            app:met_textColorHint="@android:color/black"
            android:hint="المدينه"
            android:drawableTint="@color/doctor"
            android:gravity="center"
            android:inputType="text"
            android:drawablePadding="10dp"
            android:shadowColor="@android:color/black"
            android:layout_marginTop="10dp"


            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            app:met_textColorHint="@android:color/black"
            android:hint="المنطقه"
            android:drawableTint="@color/doctor"
            android:gravity="center"
            android:inputType="text"
            android:drawablePadding="10dp"
            android:shadowColor="@android:color/black"
            android:layout_marginTop="10dp"


            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_below="@+id/txtphone"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"

        >

        <Button
            android:id="@+id/btnsignup"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bookdoctor"
            android:text="انشاء حساب"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="40sp"
            tools:fontFamily="@font/cairo_extralight" />




    </LinearLayout>




</RelativeLayout>
