<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hospital_profile"
    android:background="@drawable/group_8">

    <RelativeLayout
        android:id="@+id/realtive4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"

        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_more_vert_blue_24dp"
            android:id="@+id/imgmore"
            android:visibility="invisible"

            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear2"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"

        >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/imgprofile"
        android:src="@drawable/background"

        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@id/linear2"
        android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear2"
        android:layout_marginTop="20dp"
        android:id="@+id/linear3"

        >
        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:text=""
android:layout_toRightOf="@id/txt_name_hos"
            android:hint="مركز"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:maxLines="4"
            android:fontFamily="@font/cairo_extralight"/>

        <TextView
            android:fontFamily="@font/cairo_extralight"
            android:layout_height="wrap_content"
            android:id="@+id/txt_name_hos"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_centerHorizontal="true"
            android:hint="مركز"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            />
        <TextView
            android:fontFamily="@font/cairo_extralight"
            android:layout_height="wrap_content"
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_below="@id/txt2"
android:layout_alignParentRight="true"
            android:hint="سعر الكشف"
            android:drawableRight="@drawable/ic_monetization_on_black_24dp"

            android:layout_marginTop="35dp"
            android:layout_marginRight="20dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:maxLines="4"/>

        <TextView
            android:fontFamily="@font/cairo_extralight"
            android:layout_marginTop="35dp"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:layout_below="@id/txt_name_hos"
            android:layout_width="wrap_content"
            android:text=""
android:layout_toLeftOf="@id/txt_price"
            android:hint="مركز"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            />

        <TextView
            android:fontFamily="@font/cairo_extralight"
            android:layout_height="wrap_content"
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_below="@id/txt2"
            android:hint="مده الانتظار"
            android:drawableRight="@drawable/ic_access_time_black_24dp"

            android:layout_marginTop="35dp"
            android:layout_toRightOf="@id/times"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:maxLines="4"/>

        <TextView
            android:fontFamily="@font/cairo_extralight"
            android:layout_marginTop="35dp"
            android:layout_height="wrap_content"
            android:id="@+id/times"
            android:layout_below="@id/txt_name_hos"
            android:layout_width="wrap_content"
            android:hint="المده"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            />

        <TextView
            android:fontFamily="@font/cairo_extralight"
            android:layout_marginTop="35dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_map"
            android:layout_marginRight="20dp"
            android:layout_below="@id/txt_price"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableStart="@drawable/ic_place_black_24dp"
            />
        <TextView
            android:fontFamily="@font/cairo_extralight"
            android:layout_marginTop="35dp"
            android:layout_height="wrap_content"
            android:id="@+id/map"
            android:layout_below="@id/txt_price"
            android:layout_width="wrap_content"
android:layout_toLeftOf="@id/txt_map"
            android:hint="عنوان المركز"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            />

        <TextView
            android:fontFamily="@font/cairo_extralight"
            android:layout_marginTop="35dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_desc"
            android:layout_marginRight="20dp"
            android:layout_below="@id/txt_map"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableStart="@drawable/ic_import_contacts_black_24dp"
            />
        <TextView
            android:fontFamily="@font/cairo_extralight"
            android:layout_marginTop="35dp"
            android:layout_height="wrap_content"
            android:id="@+id/desc"
            android:layout_below="@id/map"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@id/txt_map"
            android:hint="تفاصيل المركز"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            />


    </RelativeLayout>



    </LinearLayout>
    android:id="@+id/fbhospital"

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="خدمات المركز"
        android:fontFamily="@font/cairo_extralight"
        android:id="@+id/hospitaldate"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textColor="#2E4053"
        android:layout_marginBottom="20dp"
        />





</RelativeLayout>

