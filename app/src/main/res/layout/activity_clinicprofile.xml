<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#F5F5F5"
    tools:context=".clinicprofile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/clinicimg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:orientation="horizontal"
        android:weightSum="2"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:hint="doc name"
            android:textColor="@android:color/black"
            android:id="@+id/doc_name"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="right"

            />

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:hint="Clinic name"
            android:text="عياده الدكتور"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_weight="1"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Clinic name"
            android:text="map"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="right"
android:layout_weight="1"
            android:id="@+id/map"
            />

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:hint="Clinic name"
            android:text="العنوان"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            />





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Clinic name"
            android:text="price"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_weight="1"
            android:id="@+id/price"
            />

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:hint="Clinic name"
            android:text="سعر الكشف"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            />





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Clinic name"
            android:text="times"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_weight="1"
            android:id="@+id/times"
            />

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:hint="Clinic name"
            android:text="مده الانتظار"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            />





    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <info.hoang8f.widget.FButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:hint="مواعيد العياده المتاحه"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:id="@+id/gotimes"
        android:layout_alignParentBottom="true"

        />

    </RelativeLayout>


</androidx.cardview.widget.CardView>