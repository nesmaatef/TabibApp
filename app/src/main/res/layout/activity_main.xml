<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/group_8"
    android:id="@+id/realtive">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/group_9" />
    </RelativeLayout>


    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="300dp"
        android:orientation="vertical"
        android:weightSum="2"
        android:id="@+id/linear4"
        >

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="مرحبا بك فى تطبيق طبيبك الخاص, ابحث عن الطبيب المناسب......"
           android:textSize="25sp"
           android:fontFamily="@font/cairo_extralight"
           android:textColor="#0e6e92"
           android:textStyle="bold"/>



    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear4"
        android:layout_alignParentRight="true"
        android:text="قم بتسجيل الدخول...."
        android:textSize="20sp"
        android:background="@drawable/bookdoctor"
        android:id="@+id/button"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:fontFamily="@font/cairo_extralight"/>









</RelativeLayout>