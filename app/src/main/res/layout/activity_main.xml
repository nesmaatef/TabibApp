<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ADD8E6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        >

<ImageView
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:background="@drawable/logo"
    android:gravity="center"
    android:layout_marginLeft="90dp"
    />
    </LinearLayout>


    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:orientation="vertical"
        android:weightSum="2"
        >

        <info.hoang8f.widget.FButton
            android:id="@+id/btnpatient"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="مريض"
            android:textColor="@color/doctor"
            android:layout_gravity="right"
            android:textSize="30sp"
            app:cornerRadius="10dp"
            app:fButtonColor="@android:color/white"
            app:shadowColor="@color/doctor"
            app:shadowEnabled="true"
            app:shadowHeight="5dp"
            tools:fontFamily="@font/abril_fatface"
            />


        <info.hoang8f.widget.FButton
            android:id="@+id/btndoctor"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="#283139"
            android:text="طبيب"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="normal|bold|italic"
            app:cornerRadius="10dp"
            app:fButtonColor="#283139"
            app:shadowColor="@android:color/white"
            app:shadowEnabled="true"
            app:shadowHeight="5dp"
            tools:fontFamily="@font/abril_fatface" />


    </LinearLayout>







</RelativeLayout>