<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/group_8"
    tools:context=".doctor_list_hospital"
    android:id="@+id/rootlayout">

    <com.mancj.materialsearchbar.MaterialSearchBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchBar"
        app:mt_speechMode="false"
        android:layout_alignParentTop="true"
        app:mt_hint="search your doctor here"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="اختر الدكتور المناسب"
        android:textSize="18sp"
        android:layout_below="@id/searchBar"
        android:layout_alignParentRight="true"
        android:id="@+id/txtview"
        android:fontFamily="@font/cairo_extralight"
        android:textColor="@android:color/white"
        />



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_doc"
        android:scrollbars="vertical"
        android:layout_below="@id/txtview">
    </androidx.recyclerview.widget.RecyclerView>"












</RelativeLayout>